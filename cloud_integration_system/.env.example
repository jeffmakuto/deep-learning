# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DYNAMODB_TABLE=orders-table
AWS_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:order-notifications

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=E-Commerce Platform

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS=./config/google-credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# Security
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_for_internal_services

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/lambda/integration-system
ENABLE_METRICS=true

# Error Handling
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
ENABLE_DEAD_LETTER_QUEUE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
